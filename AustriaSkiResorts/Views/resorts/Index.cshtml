@model IEnumerable<AustriaSkiResorts.Models.resort>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.snowRange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.shortInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.longInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlPicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.availableNumberOfTermins)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.snowRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shortInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.longInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urlPicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.availableNumberOfTermins)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
